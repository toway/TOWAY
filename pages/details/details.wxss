.details-wrap {
    padding: 18rpx;
    box-sizing: border-box;
}

.avatar {
  margin: 20rpx auto 10rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-image: url('/images/icon.png');
  background-size: cover;
  background-position: center center;
}

.organizer {
  color: #D3D3D3;
  font-family: '楷体';
  font-weight: 800;
  text-align: center;
  margin: 6rpx 0 10rpx;
}

.release-time{
  text-align: center;
  color: #D3D3D3;
  font-size: 28rpx;
  font-family: '楷体';
  font-weight: 600;
}

.rect {
    text-align: center;
    color: #D3D3D3;
    font-size: 40rpx;
    width: 76rpx;
    height: 12rpx;
    background-color: #D3D3D3;
    margin: 10rpx auto;
}

.activity-title {
    margin: 46rpx auto;
    text-align: center;
}

.activity-about{

}

.activity-about > view{
    margin-left: 16rpx;
    height: 58rpx;
    line-height: 48rpx;
    color: #939498;
}

.activity-about > view:before{
    content: '';
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    vertical-align: middle;
    background-color: black;
    margin-right: 16rpx;
}

.lowercase {
  font-size: 26rpx;
}

.bg-gray {
    background-color: #F6F6F6;
    height: 26rpx;
}

.second-wrap {
    padding: 18rpx;
}

.detail-introduce{
    word-break:  break-all;
}

.detail-introduce > text{
     color: #939498;
     margin-bottom: 18rpx;
}

.view-insert {
    margin: 38rpx 0;
    width: 100%;
    height: 400rpx;
    /*background-image: url('/images/activity-show.png');*/
    background-repeat: no-repeat;
    background-size: cover;
}
.view-insert image{
  height: 100%;
}
.third-wrap {
    text-align: center;
}

.confirm-people{
    margin: 48rpx auto;

}

.users>view {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    background-color: gray;
    display: inline-block;
    margin-right: 28rpx;
    text-align: left;
}

.bottom{
    height: 88rpx;
    line-height: 88rpx;
}
.bottom .price {
  margin-left: 38rpx;
}
/*.bottom :after{
    content: '';
    display: block;
    clear: both;
}*/

.bottom > button{
    border-radius: 0;
    float: right;
    height: 100%;
    line-height: 88rpx;
}
